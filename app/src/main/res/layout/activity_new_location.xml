<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/current_time_weather_color"
    android:orientation="vertical"
    tools:context=".activitys.NewLocationActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        app:title="Select location"
        app:titleTextColor="@color/white" />

    <EditText
        android:id="@+id/add_location_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mml"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:hint="Enter location :"
        android:textColor="@color/white"
        android:textColorHint="@color/boz"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/back_allow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/back_arrow" />


    <ImageView
        android:id="@+id/searchLocation"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_below="@id/mml"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_baseline_youtube_searched_for_24" />




</RelativeLayout>